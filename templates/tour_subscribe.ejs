                        <tr>
                            <td style="padding-left: 25px;padding-right: 25px;height: 150px;background-position: center top;text-align: center;">
                                <h1 style="color:#37AAEF;vertical-align: text-bottom;background-color: #fff;">Trip <%= data.title %> sudah tersedia</h1>
                            </td>
                        </tr>
                        <tr>
                            <td style="height: auto;padding-left: 25px;padding-right: 25px;width: 100%">
                                <div class="card-title" style="border-bottom: 1px solid #dcdcdc;text-align: center;width: 245px;margin: 0 auto;margin-bottom: 20px">
