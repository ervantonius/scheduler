                                        <td style="font-size: 18px;color:#6d6d6d;"><%= data.email %></td>
                                    </tr>
                                    <tr>
                                        <td style="font-size: 18px;color:#404040;font-weight: bold">No. Telp</td>
                                        <td style="width: 60px;text-align: center;font-size: 18px;color:#404040;font-weight: bold">:</td>
